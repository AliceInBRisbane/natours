extends base 

block content 
    main.main
        .review-form
            h2.heading-secondary.ma-bt-lg Write A Review 
            form.form.form--review
                .form__group
                    label.form__label(for='review') Reviw 
                    input#review.form__input(type='text', placeholder='***', required)
                .form__group.ma-bt-md
                    label.form__label(for='rating') Rating 
                    input#rating.form__input(type='number',step='0.1',min='0', max='5', placeholder='**', required)
                .form__group.ma-bt-md
                    label.form__label(for='rating') Tour ID
                    h6#tourId.form__input=tourId 
                
                .form__group
                    button.btn.btn--green(href='#') Submit